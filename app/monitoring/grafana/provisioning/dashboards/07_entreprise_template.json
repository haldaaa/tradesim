{
  "dashboard": {
    "id": null,
    "title": "TradeSim - Entreprise: $entreprise",
    "tags": ["tradesim", "entreprise", "template"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "entreprise",
          "type": "query",
          "query": "label_values(tradesim_entreprise_budget, nom)",
          "refresh": 2,
          "includeAll": false,
          "multi": false,
          "current": {
            "selected": false,
            "text": "VietnameseCorp",
            "value": "VietnameseCorp"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Budget Actuel - $entreprise",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_entreprise_budget{nom=\"$entreprise\"}",
            "legendFormat": "Budget"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "unit": "currencyEUR",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Nombre d'Entreprises",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_entreprises_nombre_total",
            "legendFormat": "Entreprises"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Transactions Total",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_transactions_total",
            "legendFormat": "Transactions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Budget Total des Entreprises",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_budget_total_entreprises",
            "legendFormat": "Budget Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "unit": "currencyEUR",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5000},
                {"color": "green", "value": 10000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      }
    ]
  }
}
