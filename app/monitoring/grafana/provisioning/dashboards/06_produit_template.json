{
  "dashboard": {
    "id": null,
    "title": "TradeSim - Produit: $produit",
    "tags": ["tradesim", "produit", "template"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "produit",
          "type": "query",
          "query": "label_values(tradesim_produits_prix_moyen, produit)",
          "refresh": 2,
          "includeAll": false,
          "multi": false,
          "current": {
            "selected": false,
            "text": "Ordinateur",
            "value": "Ordinateur"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Prix Moyen du Produit: $produit",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_produits_prix_moyen{produit=\"$produit\"}",
            "legendFormat": "Prix Moyen"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "unit": "currencyEUR",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 500},
                {"color": "red", "value": 1000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Produits Actifs",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_produits_actifs",
            "legendFormat": "Produits Actifs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 20},
                {"color": "red", "value": 40}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Transactions Total",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_transactions_total",
            "legendFormat": "Transactions"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Budget Total des Entreprises",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_budget_total_entreprises",
            "legendFormat": "Budget Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "unit": "currencyEUR",
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 5000},
                {"color": "green", "value": 10000}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      }
    ]
  }
}
