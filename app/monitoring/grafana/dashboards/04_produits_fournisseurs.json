{
  "dashboard": {
    "id": null,
    "title": "TradeSim - Produits & Fournisseurs",
    "tags": ["tradesim", "produits"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Nombre de Produits",
        "type": "stat",
        "targets": [
          {
            "expr": "tradesim_product_count",
            "legendFormat": "Produits"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "gradient-gauge"
            },
            "mappings": [],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 15},
                {"color": "red", "value": 25}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Nombre de Fournisseurs",
        "type": "stat",
